    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: 当前文件",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder};${workspaceFolder}/pycarsimlib"
            },
            "debugOptions": [
                "RedirectOutput"
            ],
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Python: 运行 runcarsim.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/examples/runcarsim.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder};${workspaceFolder}/pycarsimlib"
            },
            "args": [],
            "stopOnEntry": false,
            "showReturnValue": true,
            "redirectOutput": true,
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Python: 运行 DDPG 训练",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/examples/train_ddpg_carsim_speed.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder};${workspaceFolder}/pycarsimlib"
            },
            "python": "${command:python.interpreterPath}",
            "redirectOutput": true
        },
        {
            "name": "Python: 模块调试",
            "type": "python",
            "request": "launch",
            "module": "pycarsimlib",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder};${workspaceFolder}/pycarsimlib"
            },
            "python": "${command:python.interpreterPath}"
        }
    ]
}